{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "rust",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "changelog-path": "CHANGELOG.md",
      "versioning": "default",
      "extra-files": [
        "Cargo.toml"
      ]
    }
  },
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "perf", "section": "Performance", "release-type": "none" },
    { "type": "docs", "section": "Documentation", "release-type": "none" },
    { "type": "refactor", "section": "Code Refactoring", "release-type": "none" },
    { "type": "test", "section": "Tests", "release-type": "none" },
    { "type": "chore", "section": "Miscellaneous", "hidden": true, "release-type": "none" }
  ],
  "pull-request-title-pattern": "chore: release ${version}",
  "pull-request-header": ":robot: This PR was created by release-please.",
  "include-component-in-tag": false,
  "include-v-in-tag": true
}
